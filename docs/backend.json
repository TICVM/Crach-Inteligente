
{
  "entities": {
    "Aluno": {
      "title": "Aluno",
      "type": "object",
      "description": "Representa um aluno registrado no sistema.",
      "properties": {
        "nome": { "type": "string" },
        "turma": { "type": "string" },
        "fotoUrl": { "type": "string" },
        "customData": { "type": "object" }
      },
      "required": ["nome", "turma", "fotoUrl"]
    },
    "ConfiguracaoCracha": {
      "title": "ConfiguracaoCracha",
      "type": "object",
      "description": "Configurações de design do crachá.",
      "properties": {
        "fundoCrachaUrl": { "type": "string" },
        "badgeStyle": { "type": "object" }
      }
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/alunos/{alunoId}": {
      "schema": { "$ref": "#/backend/entities/Aluno" },
      "description": "Coleção de alunos."
    },
    "/configuracaoCracha/{userId}": {
      "schema": { "$ref": "#/backend/entities/ConfiguracaoCracha" },
      "description": "Design personalizado do usuário."
    }
  }
}
