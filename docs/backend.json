
{
  "entities": {
    "Aluno": {
      "title": "Aluno",
      "type": "object",
      "description": "Representa um aluno registrado no sistema.",
      "properties": {
        "nome": { "type": "string" },
        "turma": { "type": "string" },
        "fotoUrl": { "type": "string" },
        "customData": { "type": "object" },
        "modeloId": { "type": "string" },
        "enabled": { "type": "boolean", "description": "Se o aluno deve ser incluído na impressão." }
      },
      "required": ["nome", "turma", "fotoUrl"]
    },
    "ModeloCracha": {
      "title": "ModeloCracha",
      "type": "object",
      "description": "Configurações de design de um modelo de crachá.",
      "properties": {
        "nomeModelo": { "type": "string" },
        "fundoCrachaUrl": { "type": "string" },
        "badgeStyle": { "type": "object" },
        "userId": { "type": "string" }
      },
      "required": ["nomeModelo"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/alunos/{alunoId}": {
      "schema": { "$ref": "#/backend/entities/Aluno" },
      "description": "Coleção de alunos."
    },
    "/modelosCracha/{modeloId}": {
      "schema": { "$ref": "#/backend/entities/ModeloCracha" },
      "description": "Modelos de design de crachás salvos pelos usuários."
    }
  }
}
